{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
   <div class="card-body">
      <h4> Editar Postagem</h4>
      <form action="/admin/postagens/edit" class="" method="POST">
<input type="hidden" value="{{postagens._id}}" name="id">
<label for="titulo"> Titulo: </label>
<input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}"  required>
<label for="slug">Slug: </label>
<input type="text" name="slug" value="{{postagens.slug}}" class="form-control">
<label for="descricao">Descrição: </label>
<input type="text" name="descricao" value="{{postagens.descricao}}" class="form-control" required>

<label for="conteudo">Conteudo: </label>
<textarea  name="conteudo" required> {{postagens.conteudo}}</textarea>
<label for="categoria">Categoria: </label>

<select name="categoria" class="custom-select">
   {{#each categorias}}
   <option value="{{_id}}">{{nome}}</option>
   {{else}}
   <option value="0">Nenhuma categoria registrada</option>
   {{/each}}
</select>
<button class="btn btn-success" type="submit">Editar Postagem</button>

      </form>
   </div>
</div>