<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mb-3">Nova categoria</button></a>

{{#each categorias }}
<div class="card">
   <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small>
      <br>
      <small>Data de criação: {{data}}</small><br>
      <a href="/admin/categorias/edit/{{_id}}">  <button class="btn btn-success mt-4">Editar Categorias</button></a>
<form action="/admin/categorias/deletar"  method="POST">
<input type="hidden" name="id"  value="{{_id}}">
<button type="submit" class="btn btn-danger mt-3">Deletar categoria </button>
</form>
   </div>
</div>
{{else}}
<div class="container">
   <h4 class="mt-3 p-4">Nenhuma categoria registrada</h4>
</div>

{{/each}}